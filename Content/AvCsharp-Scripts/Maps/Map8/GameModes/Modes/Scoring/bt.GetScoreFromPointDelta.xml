<?xml version="1.0" encoding="utf-8"?>
<BehaviorTrees>
  <BehaviorTree Name="Modes.Dominion.Scoring.GetScoreFromPointDelta">
    <Parameters>
      <Parameter Name="PointDelta" VariableType="Reference, Value" ParameterType="Int" Default="" Optional="false">
        <Description>The difference in number of capture points from 0 to 5</Description>
      </Parameter>
      <OutParameter Name="ScoreChange" ParameterType="Float">
        <Description>The scoring change based on the difference in number of points controlled</Description>
      </OutParameter>
    </Parameters>
    <Node Type="Sequence" Name="Sequence">
      <Parameters />
      <Children>
        <Node Type="AbsInt" Name="ABS(PointDelta)">
          <Parameters>
            <Parameter Name="LeftHandSide" Value="PointDelta" VariableType="Reference" ReferenceType="Int" />
            <OutParameter Name="Output" Value="PointDelta" ReferenceType="Int" />
          </Parameters>
        </Node>
        <Node Type="SetVarFloat" Name="ScoreChange=0">
          <Parameters>
            <Parameter Name="Input" Value="0" VariableType="Value" />
            <OutParameter Name="Output" Value="ScoreChange" ReferenceType="Float" />
          </Parameters>
        </Node>
        <Node Type="Selector" Name="Selector">
          <Parameters />
          <Children>
            <Node Type="Sequence" Name="1_Point_Ahead">
              <Parameters />
              <Children>
                <Node Type="EqualInt" Name="PointDelta==1">
                  <Parameters>
                    <Parameter Name="LeftHandSide" Value="PointDelta" VariableType="Reference" ReferenceType="Int" />
                    <Parameter Name="RightHandSide" Value="1" VariableType="Value" />
                  </Parameters>
                </Node>
                <Node Type="SetVarFloat" Name="ScoreChange=1">
                  <Parameters>
                    <Parameter Name="Input" Value="1" VariableType="Value" />
                    <OutParameter Name="Output" Value="ScoreChange" ReferenceType="Float" />
                  </Parameters>
                </Node>
              </Children>
            </Node>
            <Node Type="Sequence" Name="2_Points_Ahead">
              <Parameters />
              <Children>
                <Node Type="EqualInt" Name="PointDelta==2">
                  <Parameters>
                    <Parameter Name="LeftHandSide" Value="PointDelta" VariableType="Reference" ReferenceType="Int" />
                    <Parameter Name="RightHandSide" Value="2" VariableType="Value" />
                  </Parameters>
                </Node>
                <Node Type="SetVarFloat" Name="ScoreChange=1.5">
                  <Parameters>
                    <Parameter Name="Input" Value="1.5" VariableType="Value" />
                    <OutParameter Name="Output" Value="ScoreChange" ReferenceType="Float" />
                  </Parameters>
                </Node>
              </Children>
            </Node>
            <Node Type="Sequence" Name="3_Points_Ahead">
              <Parameters />
              <Children>
                <Node Type="EqualInt" Name="PointDelta==3">
                  <Parameters>
                    <Parameter Name="LeftHandSide" Value="PointDelta" VariableType="Reference" ReferenceType="Int" />
                    <Parameter Name="RightHandSide" Value="3" VariableType="Value" />
                  </Parameters>
                </Node>
                <Node Type="SetVarFloat" Name="ScoreChange=2">
                  <Parameters>
                    <Parameter Name="Input" Value="2" VariableType="Value" />
                    <OutParameter Name="Output" Value="ScoreChange" ReferenceType="Float" />
                  </Parameters>
                </Node>
              </Children>
            </Node>
            <Node Type="Sequence" Name="4_Points_Ahead">
              <Parameters />
              <Children>
                <Node Type="EqualInt" Name="PointDelta==4">
                  <Parameters>
                    <Parameter Name="LeftHandSide" Value="PointDelta" VariableType="Reference" ReferenceType="Int" />
                    <Parameter Name="RightHandSide" Value="4" VariableType="Value" />
                  </Parameters>
                </Node>
                <Node Type="SetVarFloat" Name="ScoreChange=2.5">
                  <Parameters>
                    <Parameter Name="Input" Value="2.5" VariableType="Value" />
                    <OutParameter Name="Output" Value="ScoreChange" ReferenceType="Float" />
                  </Parameters>
                </Node>
              </Children>
            </Node>
            <Node Type="Sequence" Name="5_Capped">
              <Parameters />
              <Children>
                <Node Type="EqualInt" Name="PointDelta==5">
                  <Parameters>
                    <Parameter Name="LeftHandSide" Value="PointDelta" VariableType="Reference" ReferenceType="Int" />
                    <Parameter Name="RightHandSide" Value="5" VariableType="Value" />
                  </Parameters>
                </Node>
                <Node Type="SetVarFloat" Name="ScoreChange=5">
                  <Parameters>
                    <Parameter Name="Input" Value="5" VariableType="Value" />
                    <OutParameter Name="Output" Value="ScoreChange" ReferenceType="Float" />
                  </Parameters>
                </Node>
              </Children>
            </Node>
          </Children>
        </Node>
      </Children>
    </Node>
  </BehaviorTree>
</BehaviorTrees>